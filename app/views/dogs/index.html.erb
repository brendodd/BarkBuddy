<div class="container mt-3">
      <div class="col-12">
        <h1>Meet the Dogs</h1>
      </div>
<div class="d-flex">
  <div class="pe-4" style="width: 40%">
    <div class="row">
    </div>
    <div class="row">
      <% @dogs.each do |dog| %>
        <div class="col-md-12 mb-4">
          <div class="smol-card-component">
          <img class="smol-card-component-img-top" src="https://source.unsplash.com/random/400x400?<%= dog.breed %>" alt="dog image">
            <div class="smol-card-component-body">
              <%= link_to "Meet #{dog.name}", dog_path(dog), class:"btn btn-info" %>
              <p class="smol-card-component-text mt-2"><%= dog.breed %></p>
              <p class="smol-card-component-text mt-2"><%= dog.address %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <div class= "sticky-top" style="position: sticky !important; width: 60%; height: 100vh;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
</div>
